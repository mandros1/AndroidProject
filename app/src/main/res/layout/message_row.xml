<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:layout_marginBottom="12dp">>

    <TextView
            android:text="TextView"
            android:backgroundTint="@color/colorBlue"
            android:paddingStart="16dp"
            android:layout_width="225dp"
            android:layout_height="79dp"
            android:id="@+id/chatMessageFrom"
            android:background="@drawable/rounded_edges"
            android:maxWidth="240dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chatLogPicture" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.568"/>
    <ImageView
            android:layout_width="97dp"
            android:layout_height="90dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/chatLogPicture"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp" android:background="@drawable/ic_boy"/>
</android.support.constraint.ConstraintLayout>