<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_begin="155dp"/>
    <TextView
            android:text="@string/neki_kurac_od_slike"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/moguceNesto" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2" app:layout_constraintGuide_end="263dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="@string/username"
            android:paddingStart="16dp"
            android:background="@drawable/rounded_edges"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/usernameTextField"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:paddingStart="16dp"
            android:background="@drawable/rounded_edges"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/usernameTextField"
            app:layout_constraintEnd_toEndOf="@+id/usernameTextField"
            android:id="@+id/registerInputEmail" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/usernameTextField"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:paddingStart="16dp"
            android:background="@drawable/rounded_edges"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/registerInputEmail"
            app:layout_constraintEnd_toEndOf="@+id/registerInputEmail" android:id="@+id/registerInputPassword"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/registerInputEmail"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.089"
            android:importantForAutofill="no"/>
    <Button
            android:text="@string/registerButton"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/registerButton" app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"/>
    <TextView
            android:text="@string/haveAnAccount"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/registerButton" app:layout_constraintEnd_toEndOf="@+id/registerButton"
            android:id="@+id/loginTextView" android:layout_marginBottom="152dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.521"/>
</android.support.constraint.ConstraintLayout>